{
  "name": "account",
  "base": "User",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "watchList": {
      "type": [
        "string"
      ],
      "default": []
    },
    "email": {
      "type": "string",
      "required": false
    },
    "google": {
      "type": {
        "accessToken":  {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        },
        "serverAuthCode": {
          "type": "string"
        }
      }
    },
    "description": {
      "type": "string"
    },
    "notification_tokens": {
      "type": [
        "string"
      ],
      "default": []
    },
    "notification_token": {
      "type": "string",
      "required": false
    },
    "password": {
      "type": "string",
      "required": false
    },
    "created_at": {
      "type": "date",
      "defaultFn": "now"
    },
    "two_factor_secret": {
      "type": "string",
      "required": false
    },
    "invite_code": {
      "type": "string"
    },
    "followers": {
      "type": "number",
      "default": 0
    },
    "following": {
      "type": "number",
      "default": 0
    },
    "bountyHunter": {
      "type": "boolean",
      "default": false
    },
    "feedState": {
      "type": {
        "news": [
          "string"
        ],
        "ad": [
          "string"
        ],
        "user": [
          "string"
        ],
        "slot": "number",
        "lastReset": {
          "type": "date",
          "defaultFn": "now"
        }
      }
    }
  },
  "hidden": ["google", "password", "verificationToken"],
  "validations": [],
  "relations": {
    "_wallets": {
      "type": "embedsMany",
      "model": "wallet",
      "property": "wallets",
      "default": [],
      "options": {
        "forceId": false
      }
    },
    "_preference": {
      "type": "embedsOne",
      "model": "preference",
      "property": "preference",
      "default": [],
      "options": {
        "forceId": false
      }
    },
    "_addresses": {
      "type": "embedsMany",
      "model": "address",
      "property": "addresses",
      "default": [],
      "options": {
        "forceId": false
      }
    },
    "_feed": {
      "type": "embedsMany",
      "model": "feed",
      "property": "feed",
      "default": [],
      "options": {
        "forceId": true,
        "validate": true,
        "persistent": true
      }
    },
    "_exchangeAccounts": {
      "type": "embedsMany",
      "model": "ExchangeAccount",
      "property": "exchangeAccounts",
      "default": [],
      "options": {
        "forceId": false
      }
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "ownsEmbedded",
      "permission": "ALLOW",
      "property": "__create___exchangeAccounts"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "getEntirePortfolio"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "getEntirePortfolio"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "getEntirePortfolioChart"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "getEntirePortfolioChart"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "refreshAddress"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "refreshAddress"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "getTokenMeta"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "getTokenMeta"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "addToWatchList"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "removeFromWatchList"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "addAddress"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "deleteAddress"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "addWallet"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "deleteWallet"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "addExchangeAccount"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "deleteExchangeAccount"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "refreshBalances"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "register"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "addNotificationToken"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "changeEmail"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "changeUsername"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "enableTwoFactorAuth"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "validateTwoFactorToken"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "getFirebaseAuthToken"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "currencyPreference"
    },
    {     
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "googleSignIn"
    }
  ],
  "methods": {}
}
